@model RobotTR.Portal.MVC.Models.AnalyzerResponseViewModel

@{
    ViewData["Title"] = "RoboTR | Resultado";
}

<h1>Resultado:</h1>

<div style="font-size: 24px;">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Mensagem:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mensagem)
        </dd>
        <dt class = "col-sm-2">
            Pontuação:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Score)
        </dd>
    </dl>
</div>