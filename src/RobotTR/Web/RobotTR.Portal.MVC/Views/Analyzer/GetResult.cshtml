@model RobotTR.Portal.MVC.Models.AnalyzerRequestViewModel

@{
    ViewData["Title"] = "RoboTR | Analisador";
}

<h1>Analisador</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="GetResult">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job" class="control-label">Vaga proposta:</label>
                <br />
                <select asp-for="Job" id="jobsSelect" class="form-control" asp-items="@ViewBag.Jobs">
                    <option selected="selected" value="">Selecione uma vaga</option>
                </select>
                <span asp-validation-for="Job" class="text-danger"></span>
                <br />
                <label asp-for="ExperienceYears" class="control-label">Anos de Experiência:</label>
                <input asp-for="ExperienceYears" class="form-control" />
                <span asp-validation-for="ExperienceYears" class="text-danger"></span>
                <br />
                <label asp-for="GithubUsername" class="control-label">Usuário do Github:</label>
                <input asp-for="GithubUsername" class="form-control" />
                <span asp-validation-for="GithubUsername" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Analisar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#jobsSelect").select2();
        });
    </script>
}