@model RobotTR.Portal.MVC.Models.JobViewModel

@{
    ViewData["Title"] = "RoboTR | Detalhes da vaga";
}

<h1>Detalhes da vaga</h1>

<div>
    <br/>
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            Nível
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            Linguagens:
        </dt>
        @{ foreach (var language in Model.Languages)
            {
                <dd class="col-sm-10">
                    @language
                </dd>
            }
        }
        <dt class="col-sm-2">
            Frameworks:
        </dt>
        <dd class="col-sm-10">

        </dd>
        @{ foreach (var framework in Model.Frameworks)
            {
                <dd class="col-sm-10">
                    @framework
                </dd>
            }
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Editar", "Update", new { jobId = Model.Id }) |
    <a asp-action="Index">Voltar para lista de vagas</a>
</div>
